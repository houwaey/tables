CREATE TABLE PORTAL.ACCOUNT_INFO
(
  ID                NUMBER,
  MOBILENUMBER      VARCHAR2(50 BYTE),
  STATUS            VARCHAR2(10 BYTE),
  LOCKED            VARCHAR2(3 BYTE)            DEFAULT 'NO',
  EMAIL             VARCHAR2(50 BYTE),
  ALIAS             VARCHAR2(100 BYTE),
  TYPE              VARCHAR2(100 BYTE),
  REGDATE           DATE                        DEFAULT SYSDATE,
  BIRTHDATE         DATE,
  BIRTHPLACE        VARCHAR2(50 BYTE),
  NATIONALITY       VARCHAR2(100 BYTE),
  GENDER            VARCHAR2(10 BYTE),
  PASSWORD          VARCHAR2(100 BYTE)          DEFAULT '1234',
  LASTNAME          VARCHAR2(50 BYTE),
  FIRSTNAME         VARCHAR2(50 BYTE),
  MIDDLENAME        VARCHAR2(50 BYTE)           NOT NULL,
  CURRENTREGION     VARCHAR2(100 BYTE),
  CURRENTCITY       VARCHAR2(100 BYTE),
  CURRENTADDRESS    VARCHAR2(100 BYTE),
  CURRENTPOSTAL     NUMBER,
  PERMANENTREGION   VARCHAR2(100 BYTE),
  PERMANENTCITY     VARCHAR2(100 BYTE),
  PERMANENTADDRESS  VARCHAR2(100 BYTE),
  PERMANENTPOSTAL   NUMBER,
  COORDINATES       VARCHAR2(100 BYTE),
  LANGUAGE          VARCHAR2(5 BYTE)            DEFAULT 'EN',
  NETWORK           VARCHAR2(100 BYTE),
  ROOT              NUMBER,
  PARENT            NUMBER
)

CREATE TABLE PORTAL.ACCOUNT_INFO_EXTENDED
(
  MOBILENUMBER       VARCHAR2(50 BYTE),
  TOKEN              VARCHAR2(400 BYTE),
  TOKENTIMESTAMP     DATE,
  OTP                VARCHAR2(50 BYTE),
  OTPEXPIRY          DATE,
  APPNAME            VARCHAR2(50 BYTE),
  PROFESSION         VARCHAR2(200 BYTE),
  SOURCEOFFUND       VARCHAR2(200 BYTE),
  CUSTOMERIMAGE      CLOB,
  CUSTOMERSIGNATURE  CLOB,
  ISFIRSTLOGIN       NUMBER                     DEFAULT 1,
  REFERRALCODE       VARCHAR2(100 BYTE)
)
